# Etapa de desarrollo
FROM node:18-alpine

WORKDIR /app

# Copiamos archivos de dependencias
COPY package.json package-lock.json* ./

# Instalamos dependencias
RUN npm install

# Copiamos el resto del c√≥digo fuente
COPY . .

# Exponemos el puerto 3000
EXPOSE 3000

# Comando de inicio en modo desarrollo
CMD ["npm", "run", "dev"]